package calculator;

import java.util.Scanner;

import static calculator.Operation.*;

public class RunTextMode {
	
	public static void main(String[] args) {
		StackComputing stc = new StackComputing();
		
		Scanner sc = new Scanner(System.in);
		
		String inData = sc.next().toLowerCase();
		
		while (!inData.equals("quit")) {
			
			switch (inData) {
			case "+":
				stc.execute(PLUS);
				break;
			case "*":
				stc.execute(TIMES);
				break;
			case "/":
				stc.execute(DIVIDES);
				break;
			case "enter":
				stc.execute(ENTER);
				break;
			case "clear":
				stc.execute(CLEAR);
				break;
			case "chs":
				stc.execute(CHS);
				break;
			case "clearstack":
				stc.execute(CLEARSTACK);
				break;
			}
			
			System.out.println(stc.toString());
			inData = sc.next().toLowerCase();
		}
		
		private static boolean isBetween(int x, int lower, int upper) {
			return lower <= x && x <= upper;
		}
	}
}
