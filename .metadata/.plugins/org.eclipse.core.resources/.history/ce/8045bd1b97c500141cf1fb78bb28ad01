package calculator;

import java.awt.BorderLayout;
import java.awt.FlowLayout;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextField;

import static calculator.Operation.*;

public class CalculatorFrame extends JFrame {
	StackComputing sc;
	
	public CalculatorFrame(StackComputing sc) {
		super("Calculator");
		this.sc = sc;
		
		setSize(400, 350);
		setResizable(false);
		
		
		
		setLayout(new BorderLayout());
		
		JPanel mainPanel = new JPanel();
		mainPanel.setLayout(new FlowLayout());
		
		NumField nf1 = new NumField(32);
		nf1.setEnabled(false);
		NumField nf2 = new NumField(32);
		nf2.setEnabled(false);
		NumField nf3 = new NumField(32);
		nf3.setEnabled(false);
		NumField nf4 = new NumField(32);
		nf4.setEnabled(false);
		
		mainPanel.add(nf1);
		mainPanel.add(nf2);
		mainPanel.add(nf3);
		mainPanel.add(nf4);
		mainPanel.add(new OprKey(sc, ENTER, "Enter"));
		mainPanel.add(new OprKey(sc, CHS, "CHS"));
		mainPanel.add(new OprKey(sc, CLEAR, "CLX"));
		mainPanel.add(new OprKey(sc, CLEARSTACK, "CSTK"));
		mainPanel.add(new NumKey(nf1, 1, "1"));
		
		add(mainPanel, BorderLayout.CENTER);

		setVisible(true);
	}
	
	public class NumField extends JTextField {
		
		public NumField(int cols) {
			super(cols);
		}
		
	}
}
