package mountain;

import fractal.*;

public class Mountain extends Fractal {
	private int length;
	
	public Mountain() {
		super();
	}

	public String getTitle() {
		return "Mountain fractal";
	}
	
	public void draw(TurtleGraphics turtle) {
		turtle.moveTo(turtle.getWidth() / 2.0 - length / 2.0, 
				turtle.getHeight() / 2.0 + Math.sqrt(3.0) * length / 4.0);
		drawTriangle(turtle, order);
	}
	
	private void drawTriangle(TurtleGraphics turtle, int order) {
		if (order == 0) {
			turtle.penDown();
			Point p1 = new Point(turtle.getX(), turtle.getY());
			turtle.forwardTo();
			turtle.penDown();
		} else {
			drawTriangle(turtle, order - 1);
		}
	}
}
