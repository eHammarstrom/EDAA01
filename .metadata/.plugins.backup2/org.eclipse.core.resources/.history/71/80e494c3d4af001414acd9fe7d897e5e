package mountain;

import fractal.*;

public class Mountain extends Fractal {
	private int length;
	
	public Mountain(Point p1, Point p2, Point p3) {
		super();
	}

	public String getTitle() {
		return "Mountain fractal";
	}
	
	public void draw(TurtleGraphics turtle) {
		turtle.moveTo(turtle.getWidth() / 2.0 - length / 2.0, 
				turtle.getHeight() / 2.0 + Math.sqrt(3.0) * length / 4.0);
		drawTriangle(turtle, order, 30);
	}
	
	private void drawTriangle(TurtleGraphics turtle, int order, int length) {
		if (order == 0) {
			turtle.penDown();
			Point p1 = new Point(turtle.getX(), turtle.getY());
			Point p2 = new Point(turtle.getX() + length * Math.cos(0 * Math.PI / 180), turtle.getY() - length * Math.sin(0 * Math.PI / 180));
			turtle.forwardTo(p2);
			turtle.penDown();
		} else {
			drawTriangle(turtle, order - 1, length);
		}
	}
}
